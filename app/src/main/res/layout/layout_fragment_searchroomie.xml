<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:swipedeck="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="searchViewModel"
            type="com.narumasolutions.just4roomies.UI.Container.Fragments.SerachRoomies.SearchRoomiesViewModel" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

        <LinearLayout
            android:id="@+id/llSearchRoomiesActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent">


            <ImageButton
                android:id="@+id/btSearchRoomieNope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:scaleType="fitCenter"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/img_rejected" />

            <ImageButton
                android:id="@+id/btSearchRoomieRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ImageButton
                android:id="@+id/btSearchRoomieLike"
                android:layout_width="wrap_content"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/img_accepted" />

        </LinearLayout>


        <!--<com.yuyakaido.android.cardstackview.CardStackView
            android:id="@+id/csvRoomies"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/llSearchRoomiesActions"
            app:layout_constraintTop_toTopOf="parent"
            app:leftOverlay="@layout/overlay_left"
            app:rightOverlay="@layout/overlay_right"
            app:stackFrom="top"
            app:swipeDirection="horizontal"
            app:visibleCount="3">


        </com.yuyakaido.android.cardstackview.CardStackView>-->

        <com.daprlabs.cardstack.SwipeFrameLayout
            android:id="@+id/sflRoomies"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/llSearchRoomiesActions"
            app:layout_constraintTop_toTopOf="parent">

            <com.daprlabs.cardstack.SwipeDeck
                android:id="@+id/sdRoomies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                app:max_visible="3" />

        </com.daprlabs.cardstack.SwipeFrameLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/clRoomiesEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/llSearchRoomiesActions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sflRoomies">

            <ImageView
                android:id="@+id/ivRoomiesEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/logo_app_just"
                android:tint="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvRoomiesEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivRoomiesEnd"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Te acabaste los roomies"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivRoomiesEnd" />

            <Button
                android:id="@+id/btRoomiesEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorAccent"
                android:text="@string/buscar_buscardenuevo"
                android:textAllCaps="false"
                android:background="@drawable/boton_degradado"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRoomiesEnd" />

        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>

</layout>