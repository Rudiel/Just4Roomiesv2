<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:swipedeck="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="searchViewModel"
            type="com.narumasolutions.just4roomies.UI.Container.Fragments.SerachRoomies.SearchRoomiesViewModel" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

        <LinearLayout
            android:id="@+id/llSearchRoomiesActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">


            <ImageButton
                android:id="@+id/imageButton13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ImageButton
                android:id="@+id/imageButton15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ImageButton
                android:id="@+id/imageButton14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:srcCompat="@mipmap/ic_launcher_round" />

        </LinearLayout>


        <!--<com.yuyakaido.android.cardstackview.CardStackView
            android:id="@+id/csvRoomies"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/llSearchRoomiesActions"
            app:layout_constraintTop_toTopOf="parent"
            app:leftOverlay="@layout/overlay_left"
            app:rightOverlay="@layout/overlay_right"
            app:stackFrom="top"
            app:swipeDirection="horizontal"
            app:visibleCount="3">


        </com.yuyakaido.android.cardstackview.CardStackView>-->

        <com.daprlabs.cardstack.SwipeFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:id="@+id/sflRoomies"
            app:layout_constraintBottom_toTopOf="@+id/llSearchRoomiesActions"
            app:layout_constraintTop_toTopOf="parent">

            <com.daprlabs.cardstack.SwipeDeck
                app:max_visible="3"
                android:id="@+id/sdRoomies"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.daprlabs.cardstack.SwipeFrameLayout>

    </android.support.constraint.ConstraintLayout>

</layout>