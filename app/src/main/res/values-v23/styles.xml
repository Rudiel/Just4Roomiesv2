<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextTheme" parent="android:Widget.EditText">
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/boton_blanco_fb</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:drawableTint">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/naranja_degradado_transparente</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@drawable/cursor_custom</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <item name="android:statusBarColor">@color/naranja_degradado</item>
        <item name="android:colorPrimary">@color/naranja_degradado</item>
        <item name="android:colorPrimaryDark">@color/naranja_degradado</item>
        <item name="android:colorAccent">@color/naranja_degradado</item>
        <item name="colorAccent">@color/naranja_degradado</item>
    </style>


    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:colorPrimary">@color/naranja_degradado</item>
        <item name="android:colorPrimaryDark">@color/naranja_degradado</item>
        <item name="android:colorAccent">@color/naranja_degradado</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/naranja_degradado</item>
    </style>
</resources>